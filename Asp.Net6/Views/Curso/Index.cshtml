@model IEnumerable<Asp.Net6.Models.Curso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container p-3">
    <div class="row  text-center pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Cursos</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Curso" asp-action="Crear" class="btn btn-primary"><i class="fa-solid fa-square-plus me-2"></i>Nuevo Curso</a>
        </div>
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered text-center" style="width:100%">

        <thead>
            <tr>
                <th>Comision</th>
                <th>Materia</th>
                <th>Horarios</th>
                <th>Año Lectivo</th>
                <th>Listado</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Comision</td>
                    <td>@item.Materia</td>
                    <td>@item.horario</td>
                    <td>@item.anioLectivo</td>
                    <td><a asp-controller="Nota" asp-action="Filtrar" asp-route-Id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-user-graduate p-1"></i></a></td>
                    <td><a asp-controller="Curso" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-controller="Curso" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a></td>
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <p>No hay registros de Cursos</p>
}