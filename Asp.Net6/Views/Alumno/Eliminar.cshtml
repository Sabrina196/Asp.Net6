@model Asp.Net6.Models.Alumno

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Eliminar">
    <input asp-for="Id" hidden />

    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3"> ¿Esta seguro de eliminar este Alumno? </h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreApellido" class="form-label"></label>
                    <input asp-for="NombreApellido" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="correo" class="form-label"></label>
                    <input asp-for="correo" disabled class="form-control" />
                </div>
            </div>
            <br>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-controller="Alumno" asp-action="Index" class="btn btn-success">Volver</a>
            </div>

        </div>

    </div>

</form>

<!--Validaciones sin llegar al servidor/controlador-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
