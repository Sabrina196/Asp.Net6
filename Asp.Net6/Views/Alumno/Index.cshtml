@model IEnumerable<Asp.Net6.Models.Alumno>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container p-3">
    <div class="row text-center pt-4">
       <div class="col-6">
            <h2 class="text-primary">Lista de Alumnos</h2>
       </div>
       <div class="col-6">
            <a asp-controller="Alumno" asp-action="Crear" class="btn btn-primary"><i class="fa-solid fa-square-plus me-2"></i>Nuevo Alumno</a>
       </div>
    </div>
</div>
<br />

    @if (Model.Count()>0)
    {
        <table class="table table-bordered text-center" style="width:100%">

            <thead>
                <tr>
                    <th>Nombre y Apellido</th>
                    <th>Correo</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreApellido</td>
                        <td>@item.correo</td>
                        <td><a asp-controller="Alumno" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a></td>
                        <td><a asp-controller="Alumno" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>                    
                }
            </tbody>
        
        </table>
    }
    else
    {
        <p>No hay registros de Alumnos</p>
    }

